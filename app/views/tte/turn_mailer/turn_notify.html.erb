
<h1>Your Move against <%=h @other_player_name%></h1>
<p>You are player <%= @current_player == Tte::Board::TILE_X ? 'X' : 'O'%></p>

<div class="board-div" style="font-size:300%">
	<%i = 0%>
	<%@board.nested_squares.each do |row|%>
		<div>
			<% row.each do |cell|%>
				<span style="float:left; width: 75px;text-align: center; <%= (i % 3) != 2 ? 'border-right: 3px solid black;' : ''%> <%= (i / 3) != 2 ? 'border-bottom:3px solid black;' : ''%>">
					<% if cell==0 %>
						<%=link_to( 
							'GO', 
							tte_game_move_path(
								@tte_game, 
								:only_path => false, 
								:tte_game=>{
									:player=>@current_player, 
									:square=>i,
									:sig=>get_move_hash(@tte_game.id, @current_player_name, i, @board.board)
								}
							),
							:style=>'text-decoration:none'
						)%>
					<% else %>
						<%=h cell == Tte::Board::TILE_X ? 'X' : 'O'%>
					<% end %>
					<% i = i+1 %>
				</span>
			<% end %>
			<div style="clear:both"></div>
		</div>
	<% end %>
</table>

<br/>

<%=link_to(
	'Play Another Game', 
	new_tte_game_path(
		:only_path => false, 
		:tte_game=>{
			:player_a_email=>@other_player_name, 
			:player_b_email=>@current_player_name}),
	:style=>"background-color: #77D42A; border-radius: 13px; border: 5px solid #268A16; color: #306108; font-size: 21px; font-weight: bold; padding: 6px 20px;")%>
